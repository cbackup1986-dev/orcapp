{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "图片识别工具",
    "version": "1.0.0",
    "identifier": "com.imagerecognition.app",
    "build": {
        "beforeDevCommand": "npm run build:vite",
        "beforeBuildCommand": "npm run build:vite",
        "frontendDist": "../dist"
    },
    "app": {
        "withGlobalTauri": true,
        "windows": [
            {
                "title": "图片识别工具",
                "width": 1200,
                "height": 700,
                "minWidth": 900,
                "minHeight": 600,
                "center": true,
                "resizable": true,
                "decorations": true,
                "visible": false
            }
        ],
        "security": {
            "csp": null,
            "capabilities": [
                "default"
            ]
        }
    },
    "bundle": {
        "active": true,
        "targets": [
            "nsis"
        ],
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    },
    "plugins": {
        "shell": {
            "open": true
        }
    }
}